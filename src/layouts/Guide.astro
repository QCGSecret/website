---
import { ModeToggle } from '@/components/ModeToggle';
import type { MarkdownLayoutProps } from 'astro';
import type { Maps } from '../util/types.js';
import Layout from './Layout.astro';

type Props = MarkdownLayoutProps<{
	// Define frontmatter props here
	title: string;
	map: Maps;
}>;
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>
	<div class="flex items-center">
		<h1 class="mx-auto my-2 text-5xl font-extrabold text-center">{frontmatter.map} Secret Guide</h1>
		<a class="mr-4">
			<ModeToggle client:load />
		</a>
	</div>
	<body>
		<p class="max-w-screen-xl mx-auto text-center">
			This is a guide on how to do the {frontmatter.map} secret on the Qu√©bec Games servers
		</p>
		<br />
		<div class="w-40 mx-auto list-inside">
			<slot />
		</div>
	</body>
</Layout>
