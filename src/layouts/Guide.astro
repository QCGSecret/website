---
import Layout from './Layout.astro';
import type { Maps } from '../util/types.js';
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
	// Define frontmatter props here
	title: string;
	map: Maps;
}>;
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>
	<h1 class="layout-titles layout-big-title">{frontmatter.map} Secret Guide</h1>
	<body>
		<p class="layout-titles">This is a guide on how to do the {frontmatter.map} secret on the Qu√©bec Games servers</p>
		<br />
		<slot />
	</body>
</Layout>

<style>
	.layout-big-title {
		font-size: 3rem !important;
		font-weight: 800;
	}
	.layout-titles {
		margin: auto;
		text-align: center;
		width: 1000px;
	}
</style>
